{
  "manifest_version": 2,

  "name": "Scrobbleman2000",
  "description": "Scrobbles music to What I Listen To",
  "version": "1.1",
  "browser_action": {
    "default_icon": "headphones.png",
    "default_popup": "popup.html",
    "default_title": "Sign in"
  },
  "content_scripts": [
    {
      "js": ["WILT.js"],
      "run_at": "document_end",
      "matches": [
        "*://*.pandora.com/*",
        "*://*.bandcamp.com/*",
        "*://*.play.google.com/*",
        "*://*.youtube.com/*",
        "*://*.plex_ip/*",
        "*://*.play.spotify.com/*",
        "*://*.mutantradio.org/*"
      ]
    }],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
